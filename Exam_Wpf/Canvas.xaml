<Window x:Class="Exam_Wpf.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_Wpf"
        mc:Ignorable="d"
        Title="Canvas" Height="450" Width="450">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Stars0.jpg"/>
        </Grid.Background>

        <StackPanel Height="300" Width="300" Background="White">

            <StackPanel Height="155" Width="155" Margin="70" >
                <Button Name="BtnStar" Height="153" Width="153" Click="BtnStar_Click" >
                    <Canvas Height="150" Width="150">
                        
                       <Rectangle Fill="Blue" Stroke="Blue" RadiusX="20" RadiusY="20"
                                  Width="150" Height="150"></Rectangle>
                        <Polygon Stroke="Aquamarine" StrokeThickness="1" Fill="#07D6FE" Canvas.Left="7" Canvas.Bottom="10"
                             Points="15,200 68,70 110,200 0,125 135,125"></Polygon>
                    </Canvas>
                </Button>
                
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
